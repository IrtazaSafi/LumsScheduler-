

%center
	%h1
		= "Welcome #{@currUser.name}"
		%br
		= "UserID #{@currUser.id}"
		%br
		= link_to 'Add New Event',new_user_event_path(session[:user_id])


		- if flash[:notice]
			#notice.message= flash[:notice]

		= @allevents.size

	%table#events
		%thead
			%tr
				%th Event Title
				%th Owner
				%th Start Time
				%th End Time
				%th Location
				%th Status
				%th Description
		%tbody
		- @allevents.each do |event|
			%tr
				%td{:class => @title_header}= link_to event.title,user_event_path(session[:user_id],event.id)
				- if event.ownerid != nil
					%td=  User.find_by_id(event.ownerid).name
				-else
					%td= ''
				

				%td= event.starttime
				%td= event.endtime
				%td= event.location
				%td= event.status
				%td= event.description

%p.Logout= link_to 'Logout',logout_path