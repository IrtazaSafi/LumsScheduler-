

%center
	%h1
		= "Welcome" 
		= link_to @currUser.name,showprofile_path(params[:id]) 
		= " (ID = #{@currUser.id})"
		%br


	%table#events
		%thead
			%tr
				%th Event Title
				%th Owner
				%th Start Time
				%th End Time
				%th Location
				%th Status
				%th Description
		%tbody
		- @allevents.each do |event|
			%tr
				%td{:class => @title_header}= link_to event.title,user_event_path(params[:id],event.id)
				%td=  User.find_by_id(event.ownerid).name
				%td= event.starttime
				%td= event.endtime
				%td= event.location
				%td= event.status
				%td= event.description

	= link_to 'Add New Event',new_user_event_path(params[:id])
	%p.Logout= link_to 'Logout',logout_path
